@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home";
}


<section class="hero-section" id="hero">
    <div class="hero-bg-shapes">
        <div class="shape shape-1"></div>
        <div class="shape shape-2"></div>
        <div class="shape shape-3"></div>
    </div>

    <div class="container">
        <div class="row align-items-center min-vh-100 py-5">
            <div class="col-lg-6" data-aos="fade-right">
                <div class="hero-badge mb-4">
                    <i class="bi bi-mortarboard me-2"></i>
                    Learn From 20,000+ Quality Courses
                </div>

                <h1 class="hero-title mb-4">
                    Best Platform to <span class="text-gradient">Empower Skills</span>
                </h1>

                <p class="hero-description mb-4">
                    Join Symphony Limited and unlock your potential with industry-recognized certifications, expert faculty, and hands-on training that prepares you for real-world success.
                </p>

                <div class="hero-buttons mb-4">
                    <a asp-controller="Home" asp-action="Courses" class="btn btn-primary btn-lg me-3">
                        Start Learning Now <i class="bi bi-arrow-right ms-2"></i>
                    </a>
                    <a asp-controller="Home" asp-action="About" class="btn btn-outline-primary btn-lg">
                        Learn More
                    </a>
                </div>

                <p class="hero-note">
                    <i class="bi bi-check-circle-fill text-primary me-2"></i>
                    Start Your Education Journey, For a Better Future
                </p>
            </div>

            <div class="col-lg-6" data-aos="fade-left">
                <div class="hero-card-wrapper">
                    <div class="hero-floating-card">
                        <div class="d-flex align-items-center mb-3">
                            <div class="hero-card-icon me-3">
                                <i class="bi bi-people-fill"></i>
                            </div>
                            <div>
                                <h3 class="mb-0">100K+</h3>
                                <p class="mb-0 text-muted">Total Enrolled Students</p>
                            </div>
                        </div>
                        <div class="avatar-group">
                            <div class="avatar">A</div>
                            <div class="avatar">B</div>
                            <div class="avatar">C</div>
                            <div class="avatar">D</div>
                            <div class="avatar">E</div>
                            <div class="avatar avatar-more">+99K</div>
                        </div>
                    </div>
                    <div class="hero-decoration-1"></div>
                    <div class="hero-decoration-2"></div>
                </div>
            </div>
        </div>
    </div>

    <div class="scroll-indicator">
        <i class="bi bi-chevron-down"></i>
    </div>
</section>

