@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Entrance Exam";
}

<section class="py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8" data-aos="fade-up">
                <div class="card border-0 shadow-lg overflow-hidden">
                    <div class="card-header bg-primary text-white p-4 text-center">
                        <h3 class="mb-0 text-white">Exam Registration Form</h3>
                        <p class="mb-0 opacity-75">Fill in your details to register for the upcoming entrance exam</p>
                    </div>
                    <div class="card-body p-4 p-md-5">
                        <form class="needs-validation" novalidate>
                            <h5 class="mb-4 text-primary border-bottom pb-2">Personal Information</h5>
                            <div class="row g-3 mb-4">
                                <div class="col-md-6">
                                    <label class="form-label">First Name</label>
                                    <input type="text" class="form-control" required>
                                    <div class="invalid-feedback">Please provide first name.</div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Last Name</label>
                                    <input type="text" class="form-control" required>
                                    <div class="invalid-feedback">Please provide last name.</div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Email Address</label>
                                    <input type="email" class="form-control" required>
                                    <div class="invalid-feedback">Please provide valid email.</div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Phone Number</label>
                                    <input type="tel" class="form-control" required>
                                    <div class="invalid-feedback">Please provide phone number.</div>
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Address</label>
                                    <textarea class="form-control" rows="2" required></textarea>
                                    <div class="invalid-feedback">Please provide address.</div>
                                </div>
                            </div>

                            <h5 class="mb-4 text-primary border-bottom pb-2">Exam Details</h5>
                            <div class="row g-3 mb-4">
                                <div class="col-md-6">
                                    <label class="form-label">Select Course Interest</label>
                                    <select class="form-select" required>
                                        <option value="">Choose...</option>
                                        <option value="java">Java Development</option>
                                        <option value="web">Web Development</option>
                                        <option value="networking">Networking</option>
                                        <option value="database">Database</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Preferred Exam Center</label>
                                    <select class="form-select" required>
                                        <option value="">Choose...</option>
                                        <option value="ny">New York Center</option>
                                        <option value="la">Los Angeles Center</option>
                                        <option value="chi">Chicago Center</option>
                                        <option value="hou">Houston Center</option>
                                    </select>
                                </div>
                                <div class="col-12">
                                    <label class="form-label">Preferred Exam Date</label>
                                    <input type="date" class="form-control" required>
                                </div>
                            </div>

                            <div class="form-check mb-4">
                                <input class="form-check-input" type="checkbox" id="terms" required>
                                <label class="form-check-label" for="terms">
                                    I agree to the <a href="#">terms and conditions</a> and verify that all information provided is correct.
                                </label>
                                <div class="invalid-feedback">You must agree before submitting.</div>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">Register for Exam</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center text-center mb-5">
            <div class="col-lg-8">
                <h2>Exam Guidelines</h2>
                <p class="text-secondary">Please read the following instructions carefully before appearing for the exam.</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="d-flex">
                    <div class="flex-shrink-0">
                        <div class="bg-white p-3 rounded-circle shadow-sm text-primary">
                            <i class="bi bi-card-text fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h5>Admit Card</h5>
                        <p class="text-secondary small">Candidates must carry a printed copy of their admit card and a valid government ID proof.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="d-flex">
                    <div class="flex-shrink-0">
                        <div class="bg-white p-3 rounded-circle shadow-sm text-primary">
                            <i class="bi bi-clock-history fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h5>Reporting Time</h5>
                        <p class="text-secondary small">Candidates should report to the exam center at least 30 minutes before the scheduled time.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="d-flex">
                    <div class="flex-shrink-0">
                        <div class="bg-white p-3 rounded-circle shadow-sm text-primary">
                            <i class="bi bi-calculator fs-4"></i>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h5>Prohibited Items</h5>
                        <p class="text-secondary small">Electronic gadgets, calculators, and study materials are strictly prohibited inside the hall.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


