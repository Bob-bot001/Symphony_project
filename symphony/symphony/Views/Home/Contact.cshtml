@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Contact";
}

<section class="py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-4">
                <div class="h-100 p-4 bg-primary text-white rounded-4">
                    <h3 class="text-white mb-4">Get In Touch</h3>
                    <p class="mb-4 opacity-75">Have questions about our courses or need career guidance? Our team is here to help you.</p>

                    <div class="d-flex mb-4">
                        <i class="bi bi-geo-alt-fill fs-4 me-3 opacity-75"></i>
                        <div>
                            <h5 class="text-white mb-1">Visit Us</h5>
                            <p class="mb-0 opacity-75">123 Education Hub, Tech Park,<br>New York, NY 10001</p>
                        </div>
                    </div>

                    <div class="d-flex mb-4">
                        <i class="bi bi-envelope-fill fs-4 me-3 opacity-75"></i>
                        <div>
                            <h5 class="text-white mb-1">Email Us</h5>
                            <p class="mb-0 opacity-75">info@symphonylimited.com<br>admissions@symphonylimited.com</p>
                        </div>
                    </div>

                    <div class="d-flex mb-4">
                        <i class="bi bi-telephone-fill fs-4 me-3 opacity-75"></i>
                        <div>
                            <h5 class="text-white mb-1">Call Us</h5>
                            <p class="mb-0 opacity-75">+1 (234) 567-890<br>+1 (987) 654-321</p>
                        </div>
                    </div>

                    <div class="social-links mt-auto pt-4 border-top border-white border-opacity-25">
                        <a href="#" class="text-white me-3 fs-5"><i class="bi bi-facebook"></i></a>
                        <a href="#" class="text-white me-3 fs-5"><i class="bi bi-twitter-x"></i></a>
                        <a href="#" class="text-white me-3 fs-5"><i class="bi bi-linkedin"></i></a>
                        <a href="#" class="text-white fs-5"><i class="bi bi-instagram"></i></a>
                    </div>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="h-100 p-4 bg-white border rounded-4 shadow-sm">
                    <h3 class="mb-4">Send us a Message</h3>
                    <form class="needs-validation" novalidate>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Your Name</label>
                                <input type="text" class="form-control" placeholder="John Doe" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Email Address</label>
                                <input type="email" class="form-control" placeholder="john@example.com" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Phone Number</label>
                                <input type="tel" class="form-control" placeholder="+1 (234) 567-890">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Subject</label>
                                <select class="form-select">
                                    <option>General Inquiry</option>
                                    <option>Course Admission</option>
                                    <option>Fees Structure</option>
                                    <option>Other</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <label class="form-label">Message</label>
                                <textarea class="form-control" rows="5" placeholder="How can we help you?" required></textarea>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-lg">Send Message</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

