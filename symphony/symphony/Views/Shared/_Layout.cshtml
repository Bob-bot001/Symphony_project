@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Symphony Limited</title>

    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&family=Poppins:wght@400;500;600;700;800&display=swap" rel="stylesheet" />
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/login.css" />

</head>

<body>

    <!-- ================= NAVBAR ================= -->
    <nav class="navbar navbar-expand-lg fixed-top" id="mainNavbar">
        <div class="container">

            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <div class="brand-icon me-2"><i class="bi bi-mortarboard-fill"></i></div>
                <span class="brand-text">Symphony</span>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">

                <!-- CENTER MENU -->
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="About">About Us</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Courses">Courses</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="EntranceExam">Entrance Exam</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="FAQ">FAQ</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a></li>
                </ul>

                <!-- RIGHT SIDE -->
                <div class="d-flex align-items-center gap-2">

                    <button class="btn btn-icon theme-toggle" id="themeToggle">
                        <i class="bi bi-moon-fill"></i>
                    </button>

                    @if (Context.Session.GetString("UserEmail") == null)
                    {
                        <!-- NOT LOGGED IN -->
                        <a asp-controller="Home" asp-action="log" class="btn btn-primary">
                            Login
                        </a>
                    }
                    else
                    {
                        <!-- LOGGED IN -->
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle me-1"></i>
                                @Context.Session.GetString("UserName")
                            </button>

                            <ul class="dropdown-menu dropdown-menu-end">

                                @if (Context.Session.GetString("UserRole") == "Admin")
                                {
                                    <li>
                                        <a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard">
                                            <i class="bi bi-speedometer2 me-2"></i> Admin Dashboard
                                        </a>
                                    </li>
                                }

                                @if (Context.Session.GetString("UserRole") == "Teacher")
                                {
                                    <li>
                                        <a class="dropdown-item" asp-controller="Teacher" asp-action="Dashboard">
                                            <i class="bi bi-easel-fill me-2"></i> Teacher Dashboard
                                        </a>
                                    </li>
                                }

                                @if (Context.Session.GetString("UserRole") == "User")
                                {
                                    <li>
                                        <a class="dropdown-item" asp-controller="User" asp-action="Dashboard">
                                            <i class="bi bi-mortarboard-fill me-2"></i> Student Dashboard
                                        </a>
                                    </li>
                                }

                                <li><hr class="dropdown-divider" /></li>

                                <li>
                                    <a class="dropdown-item text-danger"
                                       asp-controller="Account"
                                       asp-action="Logout">
                                        <i class="bi bi-box-arrow-right me-2"></i> Logout
                                    </a>
                                </li>
                            </ul>
                        </div>
                    }

                </div>
            </div>
        </div>
    </nav>

    <!-- ================= BODY ================= -->
    <main style="margin-top:85px;">
        @RenderBody()
    </main>

    <!-- ================= FOOTER ================= -->
    <footer class="footer mt-5">
        <div class="container">

            <div class="row g-4">

                <div class="col-lg-4 col-md-6">
                    <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center text-decoration-none mb-3">
                        <div class="brand-icon me-2"><i class="bi bi-mortarboard-fill"></i></div>
                        <span class="brand-text">Symphony</span>
                    </a>
                    <p>Empowering students with modern IT skills and certifications.</p>
                </div>

                <div class="col-lg-2 col-md-6">
                    <h5>Quick Links</h5>
                    <ul class="footer-links">
                        <li><a asp-controller="Home" asp-action="About">About Us</a></li>
                        <li><a asp-controller="Home" asp-action="Courses">Courses</a></li>
                        <li><a asp-controller="Home" asp-action="Result">Check Results</a></li>
                        <li><a asp-controller="Home" asp-action="Contact">Contact Us</a></li>
                    </ul>
                </div>

                <div class="col-lg-4 col-md-6">
                    <h5>Contact Info</h5>
                    <ul class="footer-links">
                        <li><i class="bi bi-geo-alt-fill me-2 text-primary"></i> New York, USA</li>
                        <li><i class="bi bi-envelope-fill me-2 text-primary"></i> info@symphonylimited.com</li>
                        <li><i class="bi bi-telephone-fill me-2 text-primary"></i> +1 (234) 567-890</li>
                    </ul>
                </div>

            </div>

            <div class="footer-bottom mt-3">
                <p class="mb-0">© 2025 Symphony Limited. All rights reserved.</p>
            </div>

        </div>
    </footer>

    <!-- BACK TO TOP -->
    <button id="backToTop" class="btn btn-primary position-fixed bottom-0 end-0 m-4">
        <i class="bi bi-arrow-up"></i>
    </button>

    <!-- JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="~/js/site.js">
        
    
    </script>
    <script src="~/js/">


    </script>


    @RenderSection("Scripts", required: false)

</body>
</html>
